@Report{DirkJacobs2011,
  author      = {Jacobs, Dirk and Rea, Andrea},
  date        = {2011-04-15},
  institution = {ULB; Koning Boudewijnstichting},
  title       = {Verspild talent},
  type        = {resreport},
  isrn        = {978-90-5130-749-8},
  pages       = {98},
  subtitle    = {De prestatiekloof in het secundair onderwijstussen allochtone en andere leerlingenvolgens het PISA-onderzoek 2009},
  url         = {https://dipot.ulb.ac.be/dspace/bitstream/2013/115059/1/PUB2011_3002_VerspildTalent.pdf},
  urldate     = {2021-03-27},
  comment     = {Eerst volgt een opsomming van de drie gebruikte categorieën in de studie van Jacobs & Rea (2011). De eerste groep omvat de autochtonen, dit zijn leerlingen die in België of in het buitenland geboren zijn en van wie ten minste een van de ouders in België is geboren. De tweede groep bestaat uit de allochtonen, maar deze wordt opgesplitst in 2 subgroepen. Enerzijds omvat het de leerlingen die in België geboren zijn en van wie beide ouders in het buitenland geboren zijn. Die leerlingen worden hier ‘tweede generatie migranten’ genoemd. Anderzijds omvat het de ‘nieuwkomers’, leerlingen die in het buitenland zijn geboren en van wie de ouders ook in het buitenland geboren zijn. De groep van autochtonen vormt de referentiepopulatie, tenzij anders aangegeven.
Algemeen tonen de resultaten van PISA 2009 aan dat de resultaten tussen de autochtonen en allochtonen in Vlaanderen vrij uitgesproken zijn. Tweede generatie migranten scoren 70 punten minder (SD = 7,5) en nieuwkomers scoren 75 punten minder (SD = 7,8) dan de referentiegroep. Wel dient er opgemerkt te worden dat de kloof kleiner is geworden sinds PISA 2003. 
Om het netto-effect van de thuistaal op de resultaten voor wiskunde te bepalen, moet er een meervoudige lineaire regressie opgesteld worden. De verschillende onderzochte variabelen zijn immers allen geassocieerd met elkaar én met de wiskunderesultaten. De gekozen onafhankelijke variabelen zijn : tweede generatie migranten, nieuwkomers, onderwijs ouders, beroep ouders, thuistaal en soort onderwijs. Er worden 5 modellen opgesteld, waarbij er steeds een nieuwe variabele wordt toegevoegd.
Op basis van dit model (Tabel 30) kan afgeleid worden dat de thuistaal een duidelijke correlatie vertoont met de resultaten.  Indien de leerling thuis geen Nederlands spreekt, zal die, ongeacht de andere variabelen, 45 punten minder scoren voor de wiskundetest. Indien er daarbij ook rekening wordt gehouden met het soort onderwijs, waarvan we weten dat allochtonen ondervertegenwoordigd zijn in ASO, neemt de impact van de thuistaal nog toe : leerlingen die thuis geen Nederlands spreken, scoren gemiddeld 52 punten minder. (Tabel 31)
Wanneer alle variabelen in rekening worden gebracht, kan dit 45% van de totale variantie bepalen. (Noot : dit is 5% meer dan in de paper van Jacobs et al. (2007) op basis van PISA 2006.) 
Uit voorgaande modellen kan geconcludeerd worden dat vooral de SES en thuistaal van de leerling een grote invloed hebben op de wiskunderesultaten, evenals de schooloriëntatie.},
}

@Report{Jacobs2007,
  author      = {Jacobs, Dirk and Rea, Andrea and Hanquinet, Laurie},
  date        = {2007-01-01},
  institution = {KoningBoudewijnstichting},
  title       = {Prestaties van de leerlingen van buitenlandse herkomst in België volgens de PISA-studie: vergelijking tussen de Franse Gemeenschap en de Vlaamse Gemeenschap},
  type        = {resreport},
  isrn        = {978-90-5130-503-5},
  location    = {Brussels},
  pages       = {55},
  url         = {https://www.ssoar.info/ssoar/handle/document/6536},
  urldate     = {2021-03-27},
  comment     = {De drie gebruikte categorieën in de paper van Jacobs et al. (2007) zijn gelijk aan deze van de bovenstaande paper ‘Verspild talent’ van Jacob & Rea (2011).
Om de invloed van de thuistaal op de wiskunderesultaten na te gaan, worden de leerlingen in twee groepen opgesplitst. De ene groep ‘Taal van de test’ spreekt thuis de taal waarin de PISA 2006 afgenomen werd. De andere groep ‘Andere taal’ spreekt thuis een andere taal. Hierbij moet opgemerkt worden dat de taal waarin de test werd afgenomen, afhankelijk is van de taal op school. In Vlaanderen is dit dus Nederlands.
Uit de resultaten kan afgeleid worden dat er significante verschillen bestaan tussen de wiskunderesultaten binnen de categorieën van autochtonen, tweede generatie migranten en nieuwkomers. Dit betekent dat de leerlingen uit ‘Taal van de test’ gemiddeld een hogere score halen dan die uit ‘Andere taal’. Dit is echter enkel significant in de groep van allochtonen. Wat opvalt, is het feit dat allochtone leerlingen met Nederlands als thuistaal ook gemiddeld slechter scoren dan Nederlandstalige autochtonen. De verschillen in prestaties zijn dus niet louter te wijten aan de taalverschillen.
Er zijn vanzelfsprekend nog veel andere factoren die de correlatie tussen thuistaal en wiskunderesultaten beïnvloeden, waaronder SES. Algemeen kunnen we stellen dat een hogere SES zal leiden tot een hogere score.
Om het netto-effect van de thuistaal op de resultaten voor wiskunde te bepalen, moet er een meervoudige lineaire regressie opgesteld worden. De verschillende onderzochte variabelen zijn immers allen geassocieerd met elkaar én met de wiskunderesultaten. De gekozen onafhankelijke variabelen zijn : tweede generatie migranten, nieuwkomers, onderwijs ouders, beroep ouders, thuistaal en soort onderwijs. Er worden 5 modellen opgesteld, waarbij er steeds een nieuwe variabele wordt toegevoegd.
Op basis van dit model kan afgeleid worden dat de thuistaal een duidelijke correlatie vertoont met de resultaten.  Indien de leerling thuis geen Nederlands spreekt, zal die, ongeacht de andere variabelen, 44 punten minder scoren voor de wiskundetest. In vergelijking met het voorgaande model met 3 variabelen, stijgt de totale verklaarde variantie heel weinig (naar 20%). Dit kan verklaard worden doordat de thuistaal reeds deels vervat zit in de herkomstvariabelen. Indien er daarbij ook rekening wordt gehouden met het soort onderwijs, waarbij allochtonen voornamelijk geconcentreerd zijn in het TSO/BSO, neemt de impact van de thuistaal nog toe (53 punten). 
Wanneer alle variabelen in rekening worden gebracht, kan dit 40% van de totale variantie bepalen. Concreet betekent dit dat er nog andere factoren een rol spelen bij het verschil in wiskunderesultaten tussen autochtonen en allochtonen.
Uit voorgaande modellen kan geconcludeerd worden dat de verschillen in wiskunderesultaten niet louter kunnen verklaard worden door de SES en thuistaal. Daarom dient er meer aandacht besteed te worden aan andere factoren die te maken hebben met herkomst (o.a. discriminatie in het onderwijs).},
}

